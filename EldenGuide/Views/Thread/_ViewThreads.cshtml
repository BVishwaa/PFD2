@model dynamic
<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="~/css/threads.css">
    </head>
    <body>
    <div class="container">
        <h4 class="mtop">Events</h4>
        <div class="row">
                @foreach (Event events in Model.Event)
                {
                    @if (Convert.ToInt32(events.EventID) > (Convert.ToInt32(ViewData["totalevents"]) - 3))
                    {
                            <div class="card">
                                <div>
                                    <a asp-controller="Thread" asp-action="ViewComments"><h5>@events.EventName</h5></a>
                                    <p>@events.EventPhoto</p>
                                </div>
                            </div>
                    }
                }
        </div>

        <div class="content-area">
            <table class="threads-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Threads thread in Model.Threads)
                    {
                        <tr>
                            <td><a asp-controller="Comment" asp-action="Index" asp-route-threadId="@thread.ThreadID">@thread.Title</a></td>
                            <td>@thread.DatePosted</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

            

        <div class="categories-area">
            <!-- Category buttons on the right -->
            <h3 class>Categories</h3>
            <button class="categories-button" id="allButton">View all</button>
            <button class="categories-button" id="bankingButton">Banking</button>
            <button class="categories-button" id="healthButton">Health</button>
            <button class="categories-button" id="teleButton">Telecommunication</button>
            <button class="categories-button" id="fooddeliveryButton">Food Delivery</button>
            <button class="categories-button" id="transportButton">Transport</button>
        </div>
        
        <ol>
        <div id="threadContainer">
            <!-- Filtered threads will be loaded here -->
        </div>
        </ol>
        

        
    </body>
</html>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // This code will run once the DOM is fully loaded

        // Add click event listener to the 'bankingButton'
        document.getElementById('bankingButton').addEventListener('click', function (event) {
            event.preventDefault();
            var container = document.querySelector('ol');
            container.innerHTML = ''; // Clear existing content

            // AJAX request to ASP.NET backend
            $.ajax({
                url: 'ThreadController\BankingThreads', // Update with your actual URL
                type: 'GET',
                dataType: 'json',
                success: function (threads) {
                    threads.forEach(function (thread) {
                        if (thread.Category === 'Banking') {
                            var html = `<div class="col-md-6">
                                            <div class="card mb-4">
                                                <div class="card-body">
                                                    <a href="/Thread/ViewComments/${thread.ThreadID}" class="card-title"><h5>${thread.Title}</h5></a>
                                                    <p class="card-text">${thread.Description}</p>
                                                    <p class="card-text">${thread.Username} ${thread.DatePosted}</p>
                                                </div>
                                            </div>
                                        </div>`;
                            container.insertAdjacentHTML('beforeend', html);
                        }
                    });
                },
                error: function (error) {
                    console.error("Error fetching data: ", error);
                }
            });
        });
    });


</script>