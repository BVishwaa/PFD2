@model dynamic
<!DOCTYPE html>
<html lang="en">
    <head>
    <script src="/js/forum.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    </head>
    <body>
        <div class="container">
            <div class="row">
                @foreach (Event events in Model.Event)
                {
                    <!--display only top 3 most recent events-->
                    @if(Convert.ToInt32(events.EventID) > (Convert.ToInt32(ViewData["totalevents"])-3))
                    {
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <a asp-controller="Event" asp-action="Index" class="card-title"><h5>@events.EventName</h5></a>
                                    <p class="card-text">@events.EventPhoto</p>
                                </div>
                            </div>
                        </div>
                    }            
                }
            </div>
            <a asp-controller="Event" asp-action="Index" >Click here to view more events</a>
        </div>

    <button id="all">View all</button>
    <button id="Banking">Banking</button>
    <button id="Health">Health</button>
    <button id="Telecomunication">Telecomunication</button>
    <button id="Food Delivery">Food Delivery</button>
    <button id="Transport">Transport</button>

        <br />

        <div class="container">
            <div class="row">
            @foreach (Threads thread in Model.Threads)
            {
                <div class="col-md-6 thread-item" data-category="@thread.Category">
                    <div class="card mb-4">
                        <div class="card-body">
                            <a asp-controller="Comment" asp-action="Index" asp-route-threadId="@thread.ThreadID" class="card-title"><h5>@thread.Title</h5></a>
                            <p class="card-text">@thread.Description</p>
                            <p class="card-text">@thread.Username @thread.DatePosted</p>
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>
        
        <ol>
        <div id="threadContainer">
            <!-- Filtered threads will be loaded here -->
        </div>
        </ol>
        

        
    </body>
</html>
<script src="/js/threadingfilter.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

