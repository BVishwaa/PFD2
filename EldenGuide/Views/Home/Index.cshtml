                    <td class="textDwnBtn">
                        <h3>Messaging</h3>
                    </td>
                    <td class="textDwnBtn">
                        <h3>Food Delivery</h3>
                    </td>
                    <td class="textDwnBtn">
                        <h3>Transport</h3>
                    </td>
                </tr>
            </table>
        </form>
    </section>

    <div id="google_translate_element"></div>


    <script type="module">
        import { redirectToAuthPage } from '../../wwwroot/js/auth.js';

        document.getElementById('auth').addEventListener('click', () => {
            redirectToAuthPage();
        });
    </script>

    <script src="/js/bttbtn.js"></script>

    <script type="text/javascript">
        function searchResult() {
            var searchInput = document.getElementById("search-input").value.toUpperCase();
            var elements = document.querySelectorAll(".product-name");
            var cards = document.querySelectorAll(".card");

            elements.forEach((element, index) => {
                if (element.innerText.toUpperCase().match(searchInput)) {
                    cards[index].classList.remove("hide");
                }
                else {
                    cards[index].classList.add("hide");
                }
            })
        }
    </script>
</body>

</html>