    <div class="wrapper">
        <div id="search-container">
            <p id="apps" style="font-family:none;">Applications List</p>
            <input type="search" id="search-input" class="button" style="color:black"
                   placeholder="search app here." />
            <button id="search" onclick="return searchResult()">Search</button>
        </div>
        <div id="buttons">
            <button class="button_value button" onclick="filterProduct('all')">All</button>
            <button class="button_value button" onclick="filterProduct('Banking')">Banking</button>
            <button class="button_value button" onclick="filterProduct('Health')">Health</button>
            <button class="button_value button"
                    onclick="filterProduct('Telecommunications')">
                Telecommunications
            </button>
            <button class="button_value button" onclick="filterProduct('Food')">Food</button>
            <button class="button_value button" onclick="filterProduct('Transport')">Transport</button>
        </div>
        <!--<div id="products"></div>--> <!--Commented line of code showing the hardcoded categories-->
    </div>


    <script src="/js/filter.js"></script>

    <div class="wrapper">
        <div id="search-container">
            <div id="buttons">
            </div>
            <div id="products">
                @foreach (var guide in Model)
                {
                    <div class="card @guide.Category hide">
                        <img src="@Url.Content(guide.AppLogo)" alt="@guide.AppName">
                        <p class="product-name">@guide.AppName</p>
                        <a href="@Url.Action("GuideTemplate", "Guide", new { guideId = guide.GuideId })">View Guide</a>
                    </div>
                }
            </div>
        </div>

    </div>

    <section>
        <form>
            <table>
                <tr>
                    <p style="font-size: 5rem;  margin-left: 30%; font-family:none;">Our Applications</p>
                </tr>


                <tr>
                    <a asp-controller="Category" asp-action="Banking">
                        <img src="Images/For-Logos/BankIcon.png"
                             class="btn  btn-square-md">
                    </a>
                    <a asp-controller="Category" asp-action="Health">
