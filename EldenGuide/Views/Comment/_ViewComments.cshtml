@model IEnumerable<EldenGuide.Models.Comment>

<html>

<body>
    <div class="container">
        <div class="col">
            @foreach (var comment in Model)
            {
                <div class="col-md-4">
                    <div class="col mb-4">
                        <p> @comment.Username @comment.CommentText</p>
                        <p>@comment.DateCommented</p>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>