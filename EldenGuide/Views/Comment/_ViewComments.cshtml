@model IEnumerable<EldenGuide.Models.Comment>

<html>

<body>
    <div class="container">
        <div class="col">
            @foreach (var comment in Model)
            {
                <div class="col-md-4" style="font-family:'Times New Roman', Times, serif;font-size:30px;">
                    <div class="col mb-4">
                        <p><b>@comment.Username</b> on @comment.DateCommented</p>
                        <p>@comment.CommentText</p>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>