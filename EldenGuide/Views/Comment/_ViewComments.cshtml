@model EldenGuide.Models.CommentViewModel

<html>

<body>
    <div class="container">
        <div class="col">
            @foreach (var thread in Model.Threads)
            {
                @if (Convert.ToInt32(@TempData["ThreadID"]) == thread.ThreadID)
                {
                    <div class="col-md-4" style="font-family:'Times New Roman', Times, serif;font-size:30px;">
                        <div class="col mb-4">
                            <p><b>@thread.Description</b> on @thread.Username</p>
                            <p>@thread.DatePosted</p>
                        </div>
                    </div>
                }
            }
            
        </div>
    </div>
    <div class="container">
        <div class="col">
            @foreach (var comment in Model.Comments)
            {
                <div class="col-md-4" style="font-family:'Times New Roman', Times, serif;font-size:30px;">
                    <div class="col mb-4 nes-container with-title">
                        <p class="title" style="font-size:2rem;"><b>@comment.Username</b> on @comment.DateCommented</p>
                        <p>@comment.CommentText</p>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>