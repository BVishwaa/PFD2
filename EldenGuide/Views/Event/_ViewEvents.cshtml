@model IEnumerable<EldenGuide.Models.Event>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/threads.css">
    <script src="/js/forum.js"></script>

    <link href="https://unpkg.com/nes.css/css/nes.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            @foreach (var events in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <p class="card-title"><h5>@events.EventName</h5></p>
                            <p class="card-text">
                                <img src="@Url.Content(events.EventPhoto)" alt="Event Photo" height="200" width = "330">
                            </p>
                            @Html.Raw(events.Details)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>