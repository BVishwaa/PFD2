@model IEnumerable<EldenGuide.Models.Event>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<div class="container">
    <div class="row">
        @foreach (var events in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <a asp-controller="Thread" asp-action="ViewComments" class="card-title"><h5>@events.EventName</h5></a>
                        <p class="card-text">@events.EventPhoto</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
